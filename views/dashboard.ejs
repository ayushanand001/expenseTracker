<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Expense Tracker | Dashboard</title>
    <style>
        /* Small polish for mobile */
        @media (max-width: 576px) {
            .display-6 {
                font-size: 1.5rem;
            }

            .navbar-brand {
                font-size: 1.1rem;
            }
        }
    </style>
</head>

<body class="bg-light">

    <nav class="navbar navbar-dark bg-dark mb-4 shadow-sm">
        <div class="container">
            <span class="navbar-brand">Wealth & Fitness Tracker</span>
            <div class="d-flex align-items-center">
                <span class="text-white me-3 d-none d-sm-inline small">
                    <%= user.email %>
                </span>
                <a href="/logout" class="btn btn-outline-danger btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row mb-4">
            <div class="col-12 col-md-4">
                <div class="card shadow-sm border-0 bg-primary text-white">
                    <div class="card-body">
                        <h6 class="card-title text-uppercase small opacity-75">Total Expenses</h6>
                        <h2 class="display-6 fw-bold mb-0">₹<%= parseFloat(totalSpent).toLocaleString('en-IN') %>
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <h5 class="mb-3">Log New Entry</h5>
                <form action="/expenses/add" method="POST" class="row g-3">
                    <div class="col-12 col-lg-4">
                        <input type="text" name="description" class="form-control"
                            placeholder="Description (e.g., Whey Protein)" required>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="input-group">
                            <span class="input-group-text">₹</span>
                            <input type="number" name="amount" step="0.01" class="form-control" placeholder="Amount"
                                required>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <select name="category" class="form-select">
                            <option value="Food">Food</option>
                            <option value="Gym">Gym</option>
                            <option value="Supplements">Supplements</option>
                            <option value="Education">Study</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="col-12 col-lg-2">
                        <button type="submit" class="btn btn-success w-100">Add Entry</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="mb-0 text-muted">History</h6>
            <form action="/dashboard" method="GET" class="d-flex align-items-center">
                <label for="filter" class="me-2 small d-none d-sm-inline">Filter:</label>
                <select name="filter" id="filter" class="form-select form-select-sm" onchange="this.form.submit()">
                    <option value="all" <%=currentFilter==='all' ? 'selected' : '' %>>All Time</option>
                    <option value="week" <%=currentFilter==='week' ? 'selected' : '' %>>Last 7 Days</option>
                    <option value="month" <%=currentFilter==='month' ? 'selected' : '' %>>Last 30 Days</option>
                </select>
            </form>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Date</th>
                                <th>Description</th>
                                <th class="text-center">Category</th>
                                <th class="text-end">Amount</th>
                                <th class="text-center pe-4">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% expenses.forEach(expense=> { %>
                                <tr class="align-middle">
                                    <td class="ps-4 small">
                                        <%= new Date(expense.created_at).toLocaleDateString('en-IN') %>
                                    </td>
                                    <td>
                                        <div class="fw-bold">
                                            <%= expense.description %>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info text-dark">
                                            <%= expense.category %>
                                        </span>
                                    </td>
                                    <td class="text-end font-monospace fw-bold">₹<%= expense.amount %>
                                    </td>
                                    <td class="text-center pe-4">
                                        <a href="/expenses/delete/<%= expense.id %>"
                                            class="btn btn-link text-danger p-0"
                                            onclick="return confirm('Delete this entry?')">
                                            Clear
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% if (expenses.length===0) { %>
                                        <tr>
                                            <td colspan="5" class="text-center py-4 text-muted">No expenses found for
                                                this period.</td>
                                        </tr>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>

</html>